generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int                 @id @default(autoincrement())
  username      String              @unique
  password      String              //TODO Password hashing
  expensesPaid  Expense[]           @relation("Payer")
  expenseSheets ExpenseSheet[]      @relation("ExpenseSheetMembers")
  beneficiaryOf ExpenseBeneficiary[]
}

model Expense {
  id             Int                 @id @default(autoincrement())
  description    String
  amount         Float
  date           DateTime            @default(now())
  payerId        Int
  payer          User                @relation(name: "Payer", fields: [payerId], references: [id])
  categoryId     Int
  category       Category            @relation(fields: [categoryId], references: [id])
  expenseSheetId Int
  expenseSheet   ExpenseSheet        @relation(fields: [expenseSheetId], references: [id])
  beneficiaries  ExpenseBeneficiary[]
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  expenses  Expense[]
}

model ExpenseSheet {
  id          Int        @id @default(autoincrement())
  title       String
  createdAt   DateTime   @default(now())
  members     User[]     @relation("ExpenseSheetMembers")
  expenses    Expense[]
}

model ExpenseBeneficiary {
  expenseId   Int
  expense     Expense             @relation(fields: [expenseId], references: [id])
  userId      Int
  user        User                @relation(fields: [userId], references: [id])
  
  @@id([expenseId, userId])
}